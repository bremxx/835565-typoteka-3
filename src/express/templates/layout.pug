doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,initial-scale=1')
    meta(name='description' content='Личный блог Типотека')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    title Типотека
    link(rel='preload' href='../../fonts/Inter-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='../../fonts/Inter-Medium.woff2' as='font' crossorigin='anonymous')
    link(rel='preload' href='../../fonts/SFProDisplay-Regular.woff2' as='font' crossorigin='anonymous')
    link(rel='stylesheet' href='../../css/style.min.css')
    style.
      li.pagination__item--active{
        pointer-events: none;
      }
      .validation-error{
        border-radius: 10px;
        color: white;
        text-align: center;
        background-color: tomato;
        margin: 15px 0;
        padding: 10px;
      }
  body

    mixin categoriesCheckbox (category, article)
      -
        const checkedAttr = (article ? (article.categories.some((it) => it.id === category.id)) : false);
      .new-publication__checkbox
        input(id=`checkbox-${category.id}` type='checkbox' name=`categories[]` value=category.id checked=checkedAttr)
        label(for=`checkbox-${category.id}`) #{category.name}

    mixin insertErrorMessages(messages)
      if messages
        each message of messages
          .validation-error= message

    mixin pagination(page, totalPages, width, prefix)
      -
        let start = page - width;
        let end = page + width;

        if(start < 1){
          end += 1 - start;
          start = 1;
        }

        if(end > totalPages){
          start -= end - totalPages;
          end = totalPages;
        }

        if(start < 1){
          start = 1;
        }

        let i = start - 1

      .preview__toggle-wrapper
        ul.preview__pagination.pagination
          li
            a(
              class=`pagination__button button button--backwards ${start === page ? `button--disabled` : ``}`
              href=`${prefix}page=${page - 1}`
              aria-label='Страница назад'
            ) Назад

          while i++ < end
            li(class=`pagination__item ${i === page ? `pagination__item--active` : ``}`)
              a(href=`${prefix}page=${i}`)= i

          li
            a(
              class=`pagination__button button button--forward ${end === page ? `button--disabled` : ``}`
              href=`${prefix}page=${page + 1}`
              aria-label='Страница назад'
            ) Вперёд

    .wrapper
      include partials/header.pug
      block content
      include partials/footer.pug

script(src='../../js/vendor.js')
script(src='../../js/main.js')
