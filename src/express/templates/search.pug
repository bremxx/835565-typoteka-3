extends layout.pug
block content
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action='/search' method='get' autocomplete='off')
            label
              input(type='text' name='search' placeholder='Что ищем?' value=(search ? search : ''))
            button.search__button.button.button--transparent(type='submit') Найти
          if results
            each result in results
              .search__result
                time.search__date(datetime=result.date) #{humanizeDate(HumanizedDateFormat.FULL, result.date)}
                a.search__link #{result.title}
