block content
  form(action=`/articles/${id}/comments` method='POST' autocomplete='off' enctype='application/x-www-form-urlencoded')
    input(type="hidden" name="_csrf" value=csrfToken)
    .comments__avatar.avatar
      img(src=`../../upload/img/${user.avatar}` alt='аватар пользователя')
    label
      textarea(rows='1' name='message' placeholder='Присоединиться к обсуждению')
    button.comments__button.button.button--colored(type='submit') Опубликовать
